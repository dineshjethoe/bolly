@using bolly.Models

<MudCard Class="mb-4">
    <MudCardMedia Image="@Testimonial.PropertyImage" Height="250" />
    <MudCardContent>
        <MudText Typo="Typo.h6" Class="mb-2">
            @Testimonial.PropertyTitle
        </MudText>

        <div class="mb-3">
            @for (int i = 0; i < Testimonial.Rating; i++)
            {
                <MudIcon Icon="@Icons.Material.Filled.Star" Color="Color.Warning" Size="Size.Small" />
            }
        </div>

        <MudText Typo="Typo.body2" Class="mb-3 italic">
            "@Testimonial.ClientMessage"
        </MudText>

        <MudText Typo="Typo.subtitle2" Color="Color.Primary">
            <strong>@Testimonial.ClientName</strong>
        </MudText>

        <MudText Typo="Typo.caption" Class="mt-2" Style="color: rgba(0,0,0,0.6);">
            @Testimonial.DatePosted.ToString("MMMM dd, yyyy")
        </MudText>
    </MudCardContent>
</MudCard>

@code {
    [Parameter]
    public Testimonial Testimonial { get; set; } = null!;
}
